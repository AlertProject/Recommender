<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>sources</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${basedir}/../</directory>
            <outputDirectory>/eu.alert-project.iccs.recommender</outputDirectory>
            <excludes>
                <exclude>eu.alert-project.iccs.recommender.assemble</exclude>
                <exclude>**/*.iml</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/bin/**</exclude>
                <exclude>**/.settings/**</exclude>
                <exclude>**/.classpath</exclude>
                <exclude>**/.project</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../../eu.alert-project.iccs.events</directory>
            <outputDirectory>/eu.alert-project.iccs.events</outputDirectory>
            <excludes>
                <exclude>**/*.iml</exclude>
                <exclude>**/target/**</exclude>
                <exclude>**/bin/**</exclude>
                <exclude>**/.settings/**</exclude>
                <exclude>**/.classpath</exclude>
                <exclude>**/.project</exclude>
            </excludes>
        </fileSet>

    </fileSets>
</assembly>